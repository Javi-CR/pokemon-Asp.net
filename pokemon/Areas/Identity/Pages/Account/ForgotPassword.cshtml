@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Olvidé mi contraseña?";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>


<div class="row justify-content-center align-items-center text-center">
    <h2>Ingresa tu correo electrónico</h2>
    <hr />
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-header ice w-100">Recuperar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
